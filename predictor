FROM python:3.12

WORKDIR /app
COPY requirements.txt requirements.txt
RUN pip3 install -r requirements.txt
COPY csv/ csv/
COPY Python/models Python/models/
COPY templates/ templates/
COPY static/ static/
COPY Python/utils/ Python/utils
COPY Python/prediction/ Python/prediction
CMD ["uvicorn", "Python.prediction.runner:app", "--host", "0.0.0.0", "--port", "8020"]





